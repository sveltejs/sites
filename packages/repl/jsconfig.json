{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"@sveltejs/repl": ["src/lib"],
			"@sveltejs/site-kit": ["../../packages/site-kit/src/lib"],
			"@sveltejs/site-kit/*": ["../../packages/site-kit/src/lib/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
